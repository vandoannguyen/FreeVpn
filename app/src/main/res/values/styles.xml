<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="CustomTabLayout">
        <item name="tabIndicatorColor">@android:color/holo_orange_light</item>
        <item name="tabIconTint">#9F9F9F</item>
        <item name="android:textSize">18sp</item>
        <item name="iconSize">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="tabSelectedTextColor">@android:color/holo_orange_light</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
    </style>
</resources>