<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF9800</item>
        <item name="android:textSize">11sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">@drawable/custom_background_ad_attribution</item>
        <item name="android:width">19dp</item>
        <item name="android:height">19dp</item>
    </style>

    <style name="Title">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomTabLayout">
        <item name="tabIndicatorColor">@android:color/holo_orange_light</item>
        <item name="tabIconTint">#9F9F9F</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="iconSize">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="tabSelectedTextColor">@android:color/holo_orange_light</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
    </style>

    <style name="MyCustomTabTextAppearance">
        <item name="textColor">@android:color/holo_orange_light</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>