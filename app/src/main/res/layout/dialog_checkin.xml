<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Daliy Check-in"
            android:textColor="@android:color/holo_red_light"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_checkin_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day_check" />

            <TextView
                style="@style/text_daily_style"
                android:text="200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day2" />

            <TextView
                style="@style/text_daily_style"
                android:text="300" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day3" />

            <TextView
                style="@style/text_daily_style"
                android:text="400" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day4" />

            <TextView
                style="@style/text_daily_style"
                android:text="500" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day5" />

            <TextView
                style="@style/text_daily_style"
                android:text="600" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay6"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day6" />

            <TextView
                style="@style/text_daily_style"
                android:text="900" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDay7"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/ic_day7" />

            <TextView
                style="@style/text_daily_style"
                android:text="1000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtCheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/medium"
        android:text="You/ve checked in today."
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lineGotIt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_gotit"
        android:gravity="center">

        <TextView
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Got It"
            android:textColor="@color/color_main"
            android:textSize="27sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>